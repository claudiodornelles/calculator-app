{
  "variables": {
    "dockerhub_repository_name":"",
    "dockerhub_username":"",
    "dockerhub_user_password":""
  },

  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "changes": [
        "EXPOSE 8080",
        "ENTRYPOINT [\"apache-tomcat-9.0.44/bin/startup.sh\"]"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt update", "sudo apt install ansible -y"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "/var/lib/jenkins/workspace/job2-provision/job2/playbook.yml"
    },
    {
      "type": "file",
      "source": "job1/build/libs/calculator.war",
      "destination": "/apache-tomcat-9.0.52/webapps/calculator.war"
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "var.dockerhub_repository_name",
      "tags": ["calculator-app"]
    },
    {
      "type": "docker-push",
      "login": true,
      "login_username":"var.dockerhub_username",
      "login_password":"var.dockerhub_password"
    }
  ]
}